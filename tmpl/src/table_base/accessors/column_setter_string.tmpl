func (o *{{= table.DecapIdentifier }}Base) Set{{= col.Identifier }}(v {{= col.Type }}) {
{{if col.IsAPrimaryKey() }}
    if o._restored {
        panic ("error: Do not change a primary key for a record that has been saved. Instead, save a copy and delete the original.")
    }
{{if}}
{{if col.Size > 0}}
    if utf8.RuneCountInString(v) > {{= table.Identifier}}{{= col.Identifier}}MaxLength {
        panic("attempted to set {{= table.Identifier}}.{{= col.Identifier }} to a value larger than its maximum length in runes")
    }
{{if}}
{{if !col.IsAutoPK() }}
	if o._restored &&
	    o.{{= col.Field }}IsLoaded && // if it was not selected, then make sure it gets set, since our end comparison won't be valid
{{if col.IsNullable }}
		!o.{{= col.Field }}IsNull && // if the db value is null, force a set of value
{{if}}
        o.{{= col.Field }} == v {
        // no change
        return
    }
{{if}}

	o.{{= col.Field }}IsLoaded = true
	o.{{= col.Field }} = v
	o.{{= col.Field }}IsDirty = true
{{if col.IsNullable }}
    o.{{= col.Field }}IsNull = false
{{if}}
{{if col.Reference != nil }}
	if o.{{= col.Reference.Field }} != nil &&
	        o.{{= col.Field }} != o.{{= col.Reference.Field }}.PrimaryKey() {
	    o.{{= col.Reference.Field }} = nil
	}
{{if}}
}

